<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_antiguedad" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.antiguedad</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='birthday']" position="after">
                <field name="antiguedad_global_anios" readonly="1"/>
            </xpath>
            <!-- Los agregamos en la página de atributos relación laboral -->
            <xpath expr="//page[@name='atributos_relacion_laboral']//group[1]" position="inside">
                <field name="legajo"/>
                <field name="sublegajo"/>
                <field name="cuil"/>
                <field name="cbu"/>
                <field name="tipo_empleado"/>
                <field name="tipo_empresa"/>
            </xpath>
        </field>
    </record>
</odoo>
