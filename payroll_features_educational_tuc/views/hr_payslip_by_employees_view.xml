<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payslip_by_employees_form_inherit_nivel" model="ir.ui.view">
        <field name="name">hr.payslip.employees.form.inherit.nivel</field>
        <field name="model">hr.payslip.employees</field>
        <field name="inherit_id" ref="payroll.view_hr_payslip_by_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_ids']" position="before">
                <div class="o_form_label" style="margin-bottom:8px;">
                    Solo se muestran empleados con contratos activos del nivel educativo seleccionado en el lote.
                </div>
            </xpath>
        </field>
    </record>
</odoo>
