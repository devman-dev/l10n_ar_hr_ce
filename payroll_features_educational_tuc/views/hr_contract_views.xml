<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_contract_form_inherit_nivel" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.nivel</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="payroll.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Información Educativa" name="educational_info">
                    <group>
                        <group string="Información Educativa y Antigüedad">
                            <field name="nivel_educativo"/>
                            <field name="tipo_empleado"/>
                            <field name="antiguedad_anios"/>
                            <field name="antiguedad_meses"/>
                            <field name="porcentaje_antiguedad" readonly="1"/>
                        </group>
                        <group string="Decretos Aplicables">
                            <field name="decreto_413"/>
                            <field name="decreto_1741"/>
                            <field name="decreto_2780"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
