<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_ganancias_form" model="ir.ui.view">
        <field name="name">hr.employee.ganancias.form</field>
        <field name="model">hr.employee.ganancias</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="year"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="ganancia_bruta"/>
                            <field name="total_deducciones"/>
                            <field name="ganancia_neta"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deducciones Personales">
                            <group>
                                <field name="minimo_no_imponible"/>
                                <field name="deduccion_especial"/>
                                <field name="conyuge"/>
                                <field name="cantidad_hijos"/>
                            </group>
                        </page>
                        <page string="Deducciones Art. 23">
                            <group>
                                <field name="seguro_vida"/>
                                <field name="servicio_domestico"/>
                                <field name="alquiler"/>
                                <field name="cuota_medico"/>
                                <field name="donaciones"/>
                            </group>
                        </page>
                        <page string="Otras Deducciones">
                            <field name="otras_deducciones_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="fecha"/>
                                    <field name="comprobante"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_employee_ganancias" model="ir.actions.act_window">
        <field name="name">Ganancias 4ta Categoría</field>
        <field name="res_model">hr.employee.ganancias</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_employee_ganancias"
              name="Ganancias 4ta Categoría"
              parent="payroll.payroll_menu_root"
              action="action_hr_employee_ganancias"
              sequence="100"/>
</odoo>
