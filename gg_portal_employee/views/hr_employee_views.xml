<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gg_portal_employee_hr_employee_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="name">gg_portal_employee.hr.employee.form</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']//field[@name='user_id']" position="replace">
                <field name="user_id" string="Related User" domain="[('company_ids', 'in', company_id), '|', ('share', '=', False), ('portal_employee', '=', True)]" context="{'default_create_employee_id': id}" widget="many2one_avatar_user"/>
            </xpath>
        </field>
    </record>
</odoo>
