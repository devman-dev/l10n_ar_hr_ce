<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="inherit_hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.view.form.payroll</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary']" position="before">
                <field name="schedule_pay" />
                <field name="structure_type_id" required="1" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="currency_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='hr_responsible_id']" position="after">
                <field name="dias_de_vacaciones" invisible="1"/>
                <field name="cantidad_2" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>