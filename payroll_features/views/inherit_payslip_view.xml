<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_payslip_view_form_inherited" model="ir.ui.view">
            <field name="name">inherit hr payslip view form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="payroll.hr_payslip_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='struct_id']" position="after">
                    <field name="basico" invisible="1"/>
                    <field name="total_en_texto" invisible="1"/>
                    <field name="fecha_de_pago"/>
                    <field name="lugar_de_pago"/>
                    <field name="tipo_liquidacion"/>
                    <field name="nro_recibo"/>
                    <field name="dias_vacaciones"/>
                    <field name="calculo" invisible="1"/>
                    <field name="mes_vacacion"/>
                </xpath>
                <xpath expr="//page" position="after">
                    <page name="ultimo_depÃ³sito_cargas_sociales" string="Ultimo depÃ³sito cargas sociales">
                        <group>
                            <group>
                                <field name="fecha_ult_deposito" required="1"/>
                                <field name="banco_diario_contable_id" required="1"/>
                            </group>
                            <group>
                                <field name="periodo_ult_deposito" required="1"/>
                                <field name="periodo_mes_anio"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//label[@for='date_from']" position="before">
                    <field name="ajuste"/>
                </xpath>
                <xpath expr="//field[@name='worked_days_line_ids']" position="after">
                    <group>
                        <field name="haberes_remunerativos" force_save="1" readonly="1"/>
                        <field name="haberes_no_remunerativos" force_save="1" readonly="1"/>
                        <field name="descuentos" force_save="1" readonly="1"/>
                        <field name="neto" force_save="1" readonly="1"/>
                        <field name="remuneracion_bruta" force_save="1" readonly="1"/>
                    </group>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="button_recompute_libro" type="object" string="Actualizar Libro de sueldo" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>