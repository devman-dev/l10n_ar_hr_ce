<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_payslip_run_view_form_inherited" model="ir.ui.view">
            <field name="name">inherit hr payslip run view form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="payroll.hr_payslip_run_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[1]" position="after">
                    <field name="fecha_de_pago" required="1"/>
                    <field name="lugar_de_pago" required="1"/>
                    <field name="tipo_liquidacion" required="1"/>
                    <label for="empleados_vacaciones_activas"/>
                    <button icon="fa-cogs" string="Cargar vacaciones activas" name="empleados_vacaciones_activas" type="object" class="btn-primary" invisible="tipo_liquidacion != 'vacaciones'"/>
                    <button icon="fa-cogs" string="Cargar empleados activos" name="empleados_contratos_activos" type="object" class="btn-primary" invisible="tipo_liquidacion != 'mensual'"/>

                </xpath>
                <xpath expr="//group[1]" position="after">
                    <separator string="Ultimo depÃ³sito cargas sociales"/>
                    <group>
                        <group>
                            <field name="fecha_ult_deposito" required="1"/>
                            <field name="banco_diario_contable_id" required="1"/>
                        </group>
                        <group>
                            <field name="periodo_ult_deposito" required="1"/>
                            <field name="periodo_mes_anio"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="nro_procesamiento_liquidacion" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>