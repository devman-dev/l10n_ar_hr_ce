<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_hr_employee_ganancias_form" model="ir.ui.view">
        <field name="name">hr.employee.ganancias.form</field>
        <field name="model">hr.employee.ganancias</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="year"/>
                            <field name="active"/>
                            <field name="remuneracion_bruta"/>
                        </group>
                        <group>
                            <field name="total_deducciones"/>
                            <field name="ganancia_neta"/>
                            <field name="impuesto_determinado"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deducciones Personales" name="deducciones_personales">
                            <group>
                                <group>
                                    <field name="minimo_no_imponible"/>
                                    <field name="deduccion_especial"/>
                                </group>
                                <group>
                                    <field name="conyuge"/>
                                    <field name="deduccion_conyuge" readonly="1"/>
                                    <field name="cantidad_hijos"/>
                                    <field name="deduccion_hijos" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Deducciones Art. 85" name="deducciones_art85">
                            <group>
                                <group>
                                    <field name="seguro_vida"/>
                                    <field name="seguro_retiro"/>
                                    <field name="servicio_domestico"/>
                                </group>
                                <group>
                                    <field name="alquiler"/>
                                    <field name="cuota_medico"/>
                                    <field name="donaciones"/>
                                </group>
                            </group>
                        </page>
                        <page string="Otras Deducciones" name="otras_deducciones">
                            <field name="otras_deducciones_ids">
                                <tree editable="bottom">
                                    <field name="tipo"/>
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="fecha"/>
                                    <field name="comprobante"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hr_employee_ganancias_tree" model="ir.ui.view">
        <field name="name">hr.employee.ganancias.tree</field>
        <field name="model">hr.employee.ganancias</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="year"/>
                <field name="remuneracion_bruta" sum="Total"/>
                <field name="total_deducciones" sum="Total"/>
                <field name="ganancia_neta" sum="Total"/>
                <field name="impuesto_determinado" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_employee_ganancias" model="ir.actions.act_window">
        <field name="name">Ganancias 4ta Categoría</field>
        <field name="res_model">hr.employee.ganancias</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_hr_employee_ganancias"
              name="Ganancias 4ta Categoría"
              parent="payroll.payroll_menu_root"
              action="action_hr_employee_ganancias"
              sequence="100"/>
</odoo>
